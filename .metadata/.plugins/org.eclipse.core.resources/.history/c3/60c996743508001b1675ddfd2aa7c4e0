package CrawlingProject;

import java.io.IOException;
import java.util.Iterator;
import org.jsoup.*;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;


public class CrawlerDNF {
	public static void main(String[] args) {
		
		
		String url = "https://gall.dcinside.com/board/lists/?id=d_depression";
		String url2 = "https://gall.dcinside.com/board/lists/?id=d_fighter_new1&page=2";
		Document doc = null;
		
		try {
			doc = Jsoup.connect(url).get();
		}catch(IOException e) {
			e.printStackTrace();
		}
		
		Elements element = doc.select("tr.ub-content");
//		System.out.println(element);
		Iterator<Element> ie1 = element.select("td.gall_writer").iterator();
		Iterator<Element> ie2 = element.select("td.gall_date").iterator();
		Iterator<Element> ie3 = element.select("td.gall_tit").iterator();
		
		while(ie1.hasNext()) {	
			System.out.printf("%12s",ie1.next().text());
			System.out.println("\t\t\t" + ie2.next().text() + "\t\t\t" + ie3.next().text());
		}
	}

}
