package Exam;

import java.util.*;

public class Exam9 {
	public static void main(String[] args) {
		Random rand = new Random();
		while(true) {
			int userCount = 0;
			int sysCount = 0;
			
			for(int i = 0; i < 3; i++) {
				boolean randomUserTF = rand.nextBoolean();
				System.out.print("uesr : ");
				System.out.println(randomUserTF);
				if(randomUserTF)
					userCount++;
				boolean randomSysTF = rand.nextBoolean();
				System.out.print("sys : ");
				System.out.println(randomSysTF);
				if(randomSysTF)
					sysCount++;
			}
			if(userCount == 3) {
				System.out.println("User ½Â¸®!");
				break;
			}else if(sysCount == 3) {
				System.out.println("System ½Â¸®!");
			}else
				continue;
		}
		
		
		
		
	}

}
